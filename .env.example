# TalkBuddy Environment Variables Template
# Copy this file to .env and fill in your actual values

# Groq AI API Key (Required)
# Get your key from: https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key_here

# MongoDB Connection String (Required)
# Format: mongodb+srv://username:password@cluster.mongodb.net/database
# Or use local: mongodb://localhost:27017/talkbuddy
MONGODB_URI=your_mongodb_connection_string_here

# Server Configuration (Optional)
PORT=5000
NODE_ENV=production

# Database Fallback (Optional)
# Set to 'true' to enable JSON file storage when MongoDB is unavailable
DB_FALLBACK=true
